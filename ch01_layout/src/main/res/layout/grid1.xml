<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="3"
    android:rowCount="3">
    <!-- columnCount 는 세로, rowCount 는 가로 -->
    <!-- vertical 는 세로, horizontal 는 가로 -->
    <!-- 구성요소를 격자 형태로 배열할 때 사용하는 레이아웃 (orientation : 방향설정) -->
    <Button
        android:text="1"/>
    <Button
        android:text="2"/>
    <Button
        android:text="3"/>
    <Button
        android:text="4"/>
    <Button
        android:text="5"/>
    <Button
        android:text="6"/>

</GridLayout>